>>> import codecs
>>> str = "mVGZ3O3omkJLmy2pcuTq"
>>> str = codecs.decode(str, 'rot13')
>>> str = str[::-1]
>>> str = codecs.decode(str, 'base64')
>>> print str
thisisalsopw123
